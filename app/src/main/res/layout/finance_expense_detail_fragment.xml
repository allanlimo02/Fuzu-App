<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Finance.Fragments.FinanceExpenseDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:id="@+id/backtext"
            android:layout_height="wrap_content"
            android:textColor="#004673"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textStyle="bold"
            android:text="Back"
            app:drawableStartCompat="@drawable/ic_backarrow" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="340dp"
            android:id="@+id/expensedetailbtn"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#004673"
            android:textColor="@color/white"
            android:layout_below="@+id/backtext"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Expense Details"
            android:textAlignment="center"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>