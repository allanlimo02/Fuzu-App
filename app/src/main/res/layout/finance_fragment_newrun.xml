<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fbf3ee"
    tools:context=".Finance.Fragments.NewrunFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstRow"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#004763"
                android:textStyle="bold"
                android:text="Branch"
                android:layout_marginStart="20dp"/>
            <Spinner
                android:id="@+id/spinnerBranch"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#004763"
                android:textStyle="bold"
                android:text="Run Type"
                android:layout_marginStart="30dp"/>
            <Spinner
                android:id="@+id/spinnerRunType"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/firstRow"
        android:padding="5dp"
        android:weightSum="2"
        android:id="@+id/secondRow">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Run From"
                android:textColor="#004673"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <EditText
                android:id="@+id/datePicker"
                android:layout_width="90dp"
                android:layout_height="30dp"
                style="?android:spinnerStyle"
                android:padding="5dp"
                android:background="@drawable/thin_border"
                android:drawableEnd="@drawable/ic_calendar"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Run to"
                android:textColor="#004673"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/runto"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:background="@drawable/thin_border"
                android:drawableEnd="@drawable/ic_calendar"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/relativeOne"
        app:layout_constraintTop_toBottomOf="@+id/secondRow"
        tools:layout_editor_absoluteX="-30dp">


        <TextView
            android:id="@+id/paymentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Pay Method"
            android:textColor="#004673"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinnerPayment"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="186dp"
            android:layout_toEndOf="@+id/paymentTxt"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@id/paymentTxt" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relativeOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/proceedBtn"
        android:background="#004763"
        android:textColor="@color/white"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Proceed"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spin"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/proceedBtn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/whitebg"
        android:weightSum="3"
        android:background="#ffffff"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/proceedBtn">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#004763"
                android:textStyle="bold"
                android:text="Payroll History"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#004763"
                android:textStyle="bold"
                android:id="@+id/frequencytxt"
                android:text="Frequency"/>
            <Spinner
                android:id="@+id/frequencySpinner"
                android:layout_width="70dp"
                app:layout_constraintStart_toEndOf="@+id/frequencytxt"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#004763"
                android:textStyle="bold"
                android:id="@+id/yeartxt"
                android:text="Year"/>
            <Spinner
                android:id="@+id/yearSpinner"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>
<!--    Recyclerview Part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/whitebg"
        android:weightSum="4"
        android:id="@+id/recViewPart">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004673"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:text="Pay ID"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004673"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:text="Month"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004673"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:text="Debit Amount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004673"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:text="Payment Status"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerviewMain"
        app:layout_constraintTop_toBottomOf="@+id/recViewPart"
        android:layout_margin="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>