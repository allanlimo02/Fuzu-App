<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HumanResource.SomethingElse"
    android:padding="5dp">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="0dp">



        <!--    line 1-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--    line 1-->
                <TextView
                    android:id="@+id/employeeCodeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#004673"
                    android:layout_marginStart="3dp"
                    android:text="@string/employee_code" />


                <EditText
                    android:id="@+id/employeeCode"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/surnameTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="@string/surname" />


                <EditText
                    android:id="@+id/surname"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/otherNameTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="@string/other_name" />


                <EditText
                    android:id="@+id/otherName"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="62dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--    line 2-->

                <TextView
                    android:id="@+id/phoneNumberTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Phone Number" />


                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idPassportNumberTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="ID/Passport No" />

                <EditText
                    android:id="@+id/idPassportNumber"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="124dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--    line3-->

                <TextView
                    android:id="@+id/nationalityTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Nationality"/>


                <EditText
                    android:id="@+id/nationality"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateOfBirthTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth" />


                <EditText
                    android:id="@+id/dateOfBirth"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/positionTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Position" />

                <EditText
                    android:id="@+id/position"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="184dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--    line4-->

                <TextView
                    android:id="@+id/departmentTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Department" />

                <EditText
                    android:id="@+id/department"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employmentTypeTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Employment Type" />


                <EditText
                    android:id="@+id/employmentType"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/employmentDateTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Employment Date" />

                <EditText
                    android:id="@+id/employmentDate"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="246dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/grossSalaryTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Gross Salary" />


                <EditText
                    android:id="@+id/grossSalary"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maritalStatusTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Marital Status" />

                <EditText
                    android:id="@+id/maritalStatus"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/emergencyContactTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact" />

                <EditText
                    android:id="@+id/emergencyContact"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="306dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emergencyContactPhoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#004673"
                    android:text="Emergency Contact Phone" />

                <EditText
                    android:id="@+id/emergencyContactPhone"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/paymentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0c4763"
            android:layout_marginTop="368dp"
            android:text="Payment Details" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="394dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/bankNameTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Bank Name" />


                <EditText
                    android:id="@+id/bankName"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/branchTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#004673"
                    android:layout_height="wrap_content"
                    android:text="Branch"/>

                <EditText
                    android:id="@+id/branch"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accountNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#004673"
                    android:text="Account Number" />

                <EditText
                    android:id="@+id/editTextTextPersonName19"
                    android:layout_width="110dp"
                    android:layout_height="34dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/saveDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Details"
            android:layout_marginTop="454dp"
            android:textColor="@color/white"
            android:backgroundTint="#0c4763"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>

























