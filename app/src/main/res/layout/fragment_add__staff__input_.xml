<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF3EE"
    android:fillViewport="true"
    android:paddingBottom="70dp">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_marginTop="0dp">



        <!--    line 1-->

        <LinearLayout
            android:id="@+id/lineone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--    line 1-->
                <TextView
                    android:id="@+id/employeeCodeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="Employee_code*"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/employeeCode"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/surnameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="surname*"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/surname"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/otherNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="other_name*"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/otherName"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/linetwo"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--    line 2-->

                <TextView
                    android:id="@+id/phoneNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number*"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idPassportNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID/Passport Number"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/idPassportNumber"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linetwo"
            android:id="@+id/linethree"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--    line3-->

                <TextView
                    android:id="@+id/nationalityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/nationality"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateOfBirthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textColor="#000000"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/dateOfBirth"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/positionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position*"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/position"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />
            </LinearLayout>
        </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/linethree"
    android:id="@+id/linefour"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    line4-->

        <TextView
            android:id="@+id/departmentTextView"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="Department*" />

        <EditText
            android:id="@+id/departmentDocs"
            android:inputType="number"
            android:layout_width="110dp"
            android:background="@drawable/super_thin_backround"
            android:layout_height="25dp"
            android:paddingLeft="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/employmentTypeTextView"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="Employment Type*" />

        <EditText
            android:id="@+id/employmentType"
            android:layout_width="110dp"
            android:paddingLeft="4dp"
            android:background="@drawable/super_thin_backround"
            android:layout_height="25dp"
            android:inputType="textPersonName" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/employmentDateTextView"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="Employment Date" />

        <EditText
            android:id="@+id/employmentDate"
            android:layout_width="110dp"
            android:background="@drawable/super_thin_backround"
            android:layout_height="25dp"
            android:paddingLeft="4dp"
            android:inputType="textPersonName"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    </LinearLayout>
</LinearLayout>
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:id="@+id/line5"
            android:layout_below="@+id/linefour">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/grossSalaryTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Gross Salary" />


                <EditText
                    android:id="@+id/grossSalary"
                    android:layout_width="110dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/super_thin_backround"
                    android:layout_height="25dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maritalStatusTextView"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Marital Status" />

                <EditText
                    android:id="@+id/maritalStatus"
                    android:layout_width="110dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/super_thin_backround"
                    android:layout_height="25dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/emergencyContactTextView"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact" />

                <EditText
                    android:id="@+id/emergencyContact"
                    android:layout_width="110dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/super_thin_backround"
                    android:layout_height="25dp"
                    android:inputType="textPersonName"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_marginTop="10dp"
            android:id="@+id/line6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emergencyContactPhoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact Phone"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/emergencyContactPhone"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/super_thin_backround"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/paymentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/line6"
            android:text="Payment Details"
            android:textColor="#0c4763"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lastrow"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/paymentDetails">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/bankNameTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Bank Name" />

                <EditText
                    android:id="@+id/bankName"
                    android:layout_width="110dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/super_thin_backround"
                    android:layout_height="25dp"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/branchTextView"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Branch"/>

                <EditText
                    android:id="@+id/branch"
                    android:paddingLeft="4dp"
                    android:layout_width="110dp"
                    android:background="@drawable/super_thin_backround"
                    android:layout_height="25dp"
                    android:inputType="textPersonName" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accountNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="Account Number" />

                <EditText
                    android:id="@+id/accountNumber"
                    android:layout_width="110dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/super_thin_backround"
                    android:layout_height="25dp"
                    android:inputType="number" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/saveDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastrow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0c4763"
            android:text="Save Details"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>



</ScrollView>