<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Finance.Pazyroll.Payments_Fragment">

    <RelativeLayout
        android:id="@+id/payroll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/payName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay ID"
            android:textColor="#004673"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp"
            android:text="Action"
            android:textColor="#004673"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/payAction"
            android:text="Status"
            android:textColor="#004673"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payDebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:layout_toStartOf="@+id/payStatus"
            android:text="Debit Amount"
            android:textColor="#004673"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_toStartOf="@+id/payDebit"
            android:text="Month"
            android:textColor="#004673"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/recviewPay"
        app:layout_constraintTop_toTopOf="@id/payroll_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>